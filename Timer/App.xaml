<Application x:Class="Timer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Timer"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="DarkBackround">
            <SolidColorBrush.Color>
                <Color A="255" R="46" G="46" B="46"/>
            </SolidColorBrush.Color>
        </SolidColorBrush>

        <SolidColorBrush x:Key="WhiteColor">
            <SolidColorBrush.Color>
                <Color A="255" R="190" G="190" B="190"/>
            </SolidColorBrush.Color>
        </SolidColorBrush>

        <Style x:Key="TimeStyle">
            <Setter Property="ItemsControl.FontSize" Value="50"/>
            <Setter Property="ItemsControl.SnapsToDevicePixels" Value="True"/>
            <Setter Property="ItemsControl.Foreground" Value="{StaticResource WhiteColor}"/>
            <Setter Property="ItemsControl.FontFamily" Value="Times New Romans"/>
            <Setter Property="ItemsControl.FontWeight" Value="Bold"/>
            <Setter Property="ItemsControl.FontStyle" Value="Italic"/>
        </Style>
    </Application.Resources>
</Application>
